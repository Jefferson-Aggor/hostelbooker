{{> _navbar}}

<div class="container">
    <div class="my-5">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                    aria-selected="true">Rooms</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                    aria-controls="profile" aria-selected="false">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab"
                    aria-controls="contact" aria-selected="false">Contact</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                {{#if room}}
                <div class="grid-4">
                    {{#each room}}
                    <div class="card mb-3 shadow-sm">
                        <img src="/img/bg2.jpg" class="card-img-top" alt="..." />
                        <div class="card-body">
                            <h5 class="card-title lead">{{room}}</h5>
                            <div class="text-muted">ghs{{price}}</div>
                            <p class="card-text">
                                <a href="/hb/view-room/{{_id}}" class="btn btn-dark btn-block">View Room</a>
                            </p>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <p>No room listed yet</p>
                {{/if}}

            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                About Us
                <br />
                {{user.hostel.description}}
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                Email:
                <strong><a href="mailto:{{user.hostel.email}}">{{user.email}}</a></strong>

                <p class="my">Contact</p>
                <p><strong>{{user.phone}}</strong></p>
            </div>
        </div>
    </div>
</div>